# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/nynava
REDIS_URL=redis://localhost:6379/0

# IPFS Configuration
IPFS_NODE_URL=http://localhost:5001
IPFS_GATEWAY_URL=https://gateway.ipfs.io

# Hyperledger Fabric Configuration
HYPERLEDGER_PEER_URL=grpc://localhost:7051
HYPERLEDGER_ORDERER_URL=grpc://localhost:7050
HYPERLEDGER_CA_URL=http://localhost:7054
HYPERLEDGER_CHANNEL_NAME=nynava-channel
HYPERLEDGER_CHAINCODE_NAME=consent-management

# AI Model Configuration
HUGGINGFACE_API_KEY=your-huggingface-api-key
OPENAI_API_KEY=your-openai-api-key-optional
MODEL_CACHE_DIR=./models/cache

# Federated Learning Configuration
FLOWER_SERVER_ADDRESS=localhost:8080
FL_ROUNDS=10
FL_MIN_CLIENTS=2

# Security Configuration
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Privacy & Anonymization
ANONYMIZATION_LEVEL=high
PHI_DETECTION_THRESHOLD=0.8
DATA_RETENTION_DAYS=2555  # 7 years for HIPAA compliance

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-password

# External Services
GITHUB_TOKEN=your-github-token
VERCEL_TOKEN=your-vercel-token

# Monitoring & Logging
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn-optional
PROMETHEUS_PORT=9090

# Development Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
API_PREFIX=/api/v1
UPLOAD_MAX_SIZE=100MB
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,dicom,csv,json